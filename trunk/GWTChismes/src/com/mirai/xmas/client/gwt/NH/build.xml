				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/junit.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/mail.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/tomahawk-1.1.3.jar" />
				<pathelement location="C:/Program Files/Google/GWT-1.2.22/gwt-dev-windows.jar" />
			</classpath>
			<arg value="-style"/>
			<arg value="DETAILED"/>
			<arg value="-out" />
			<arg file="@dot" />
			<arg value="${gwt.module.id}" />
		</java>
	</target>

	<target name="web-xml">
		<mkdir dir="@dot/${gwt.module.id}/WEB-INF" />
		<echo file="@dot/${gwt.module.id}/WEB-INF/web.xml"><![CDATA[<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<servlet>
		<servlet-name>com.mirai.xmas.client.gwt.NH.server.ServImpl</servlet-name>
		<servlet-class>com.mirai.xmas.client.gwt.NH.server.ServImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>com.mirai.xmas.client.gwt.NH.server.ServImpl</servlet-name>
		<url-pattern>/Serv</url-pattern>
	</servlet-mapping>

</web-app>
]]></echo>
	</target>

	<target name="war" depends="jars, gwt-compile, web-xml">
		<delete file="${war.name}" />
		<copy file="${gwt.home}/gwt-servlet.jar" todir="@dot/${gwt.module.id}/WEB-INF/lib" />
		<jar destfile="${war.name}" basedir="@dot/${gwt.module.id}" duplicate="preserve" />
		<delete dir="@dot" />
	</target>
	
	<target name="deploy" depends="war">
		<move file="${war.name}" todir="C:/Program Files/Apache/Tomcat6.0/webapps" />
	</target>

	<target name="all" depends="deploy" />

</project>
