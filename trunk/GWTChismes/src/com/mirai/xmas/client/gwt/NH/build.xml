		<!--=== XMAS-war ===-->
		<jar destfile="@dot/${gwt.module.id}/WEB-INF/lib/XMAS-war.jar">
			<fileset dir="C:/Documents and Settings/manolo/workspace/XMAS-war/src">
				<include name="**"/>
			</fileset>
			<fileset dir="C:/Documents and Settings/manolo/workspace/XMAS-war/bin">
				<include name="**/*.class"/>
			</fileset>
		</jar>
		<copy todir="@dot/${gwt.module.id}/WEB-INF/lib">
			<fileset file="C:\Documents and Settings\manolo\workspace\XMAS-war\web\WEB-INF\lib\xmas-xdcl.jar"/>
			<fileset file="C:\Documents and Settings\manolo\workspace\XMAS-war\web\WEB-INF\lib\mre-client-utils.jar"/>
