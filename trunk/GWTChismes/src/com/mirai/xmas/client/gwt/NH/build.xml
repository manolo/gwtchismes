	<target name="gwt-compile" description="Compile to JavaScript">
		<java classname="com.google.gwt.dev.GWTCompiler" fork="yes" failonerror="true">
			<classpath>
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/src" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/.metadata/.plugins/com.swtdesigner.gwt/gwt-user-patch.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/bin" />
				<pathelement location="C:/Program Files/Google/GWT-1.2.22/gwt-user.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/xmas-xdcl.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/mre-client-utils.jar" />
				<pathelement location="C:/Documents and Settings/manolo/workspace/XMAS-war/web/WEB-INF/lib/mre-utils.jar" />
